<Window x:Class="QAManagement.TestAssistant.ActionResult"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Action Result" Height="244" Width="429" Name="frmActionResult">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28*" />
            <RowDefinition Height="43*" />
            <RowDefinition Height="22*" />
            <RowDefinition Height="112*" />
        </Grid.RowDefinitions>
        <Label Content="Requirement" Height="28" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Top" />
        <RadioButton Content="Pause" Height="16" HorizontalAlignment="Left" Margin="264,5,0,0" Name="rdoPause" VerticalAlignment="Top" />
        <RadioButton Content="Pass" Height="16" HorizontalAlignment="Right" Margin="0,5,52,0" Name="rdoPass" VerticalAlignment="Top" />
        <RadioButton Content="Fail" Height="16" HorizontalAlignment="Left" Margin="362,5,0,0" Name="rdoFail" VerticalAlignment="Top" />
        <TextBlock Grid.Row="3" Name="txtComment" Text="TextBlock" />
         
        <Label Content="Comment" Grid.Row="2" Height="28" HorizontalAlignment="Left" Name="label2" VerticalAlignment="Top" Grid.RowSpan="2" />
        <Label Content="Label" Grid.Row="1" Name="label3" Padding="1" />
        
    </Grid>
</Window>
